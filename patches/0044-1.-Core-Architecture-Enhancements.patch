+
+    console.log(`üîÑ [PARALLEL_EXECUTOR] Executing ${toolCalls.length} tool calls with concurrency ${maxConcurrency}`);
+
+    const startTime = Date.now();
+    const results = [];
+    const errors = [];
+
+    // Split tool calls into batches based on concurrency limit
